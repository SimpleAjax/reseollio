{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Client",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect-brk",
                "${workspaceFolder}/sdks/node/test-debug.ts"
            ],
            "cwd": "${workspaceFolder}/sdks/node",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current TypeScript File",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect-brk",
                "${file}"
            ],
            "cwd": "${workspaceFolder}/sdks/node",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Node Debugger",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/sdks/node"
        }
    ]
}